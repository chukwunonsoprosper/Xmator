{
    "manifest_version": 3,
    "name": "Xmator",
    "version": "2.0",
    "description": "Smart Twitter automation tool that analyzes user bios based on keywords for intelligent follow/unfollow actions",
    "permissions": ["storage", "scripting", "tabs", "activeTab"],
    "host_permissions": ["https://twitter.com/*", "https://x.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  